{
    "name": "puleeno/nhanh-vn-sdk",
    "description": "PHP SDK cho Nhanh.vn API - Giải pháp tiêu chuẩn để tích hợp với Nhanh.vn",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Puleeno Nguyen",
            "email": "puleeno@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpdocumentor/phpdocumentor": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Puleeno\\NhanhVn\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puleeno\\NhanhVn\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse",
        "docs": "phpdoc"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
